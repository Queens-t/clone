{
  "name": "toyota-customer-profiling-bot-api",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "node .",
    "serve:monit": "pm2 monit",
    "serve:status": "pm2 status",
    "serve:log": "pm2 logs",
    "serve:dev:start": "pm2 start ecosystem.config.js --env dev",
    "serve:dev:stop": "pm2 stop ecosystem.config.js --env dev",
    "serve:dev:restart": "pm2 restart ecosystem.config.js --env dev",
    "serve:dev:delete": "pm2 delete ecosystem.config.js --env dev",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --verbose --coverage --colors=true --config=./jest.config.js",
    "test:watch": "jest --verbose --coverage --colors=true --watch=true --config=./jest.config.js",
    "build:test": "jest --colors=true --config=jest.config.js",
    "posttest": "npm run lint && nsp check",
    "preversion": "npm run build:test ",
    "postversion": "git push && git push --tags",
    "version": "git add -A",
    "version:patch": "npm version patch -git-tag-version --force --",
    "version:minor": "npm version minor -git-tag-version --force --",
    "version:major": "npm version major -git-tag-version --force --",
    "package:check-version": "ncu",
    "package:upgrade-version": "ncu -u",
    "build-css": "node-sass --include-path scss public/liff/css/site.scss public/liff/css/site.css --output-style compressed",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "dependencies": {
    "@azure/storage-blob": "^12.8.0",
    "@azure/storage-queue": "^12.2.0",
    "@line/bot-sdk": "^7.2.0",
    "aws-sdk": "^2.518.0",
    "axios": "^0.24.0",
    "ba64": "^3.0.9",
    "bcryptjs": "^2.4.3",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "crypto": "^1.0.1",
    "date-fns": "^2.28.0",
    "dialogflow": "^0.9.0",
    "exceljs": "^4.1.1",
    "google-libphonenumber": "^3.2.12",
    "helmet": "^3.20.0",
    "helmet-csp": "^3.1.0",
    "jimp": "^0.16.0",
    "json2csv": "^4.5.2",
    "jsonschema": "^1.2.4",
    "jsonwebtoken": "^8.5.1",
    "loopback": "^3.19.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^6.0.0",
    "loopback-connector-mssql": "^3.7.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.28",
    "multiparty": "^4.2.1",
    "node-cache": "^4.2.1",
    "node-cron": "^2.0.3",
    "node-excel-export": "^1.4.4",
    "pb-util": "^0.1.2",
    "pm2": "^4.4.1",
    "randomstring": "^1.1.5",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "serve-favicon": "^2.0.1",
    "shelljs": "^0.8.4",
    "shelljs.exec": "^1.1.8",
    "strong-error-handler": "^3.5.0",
    "uuid": "^3.3.3",
    "canvas": "^2.7.0"
  },
  "devDependencies": {
    "dotenv": "^8.1.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-loopback": "^8.0.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^26.4.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-check-updates": "^7.1.1",
    "nsp": "^2.1.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "toyota-customer-profiling-bot-api"
}
